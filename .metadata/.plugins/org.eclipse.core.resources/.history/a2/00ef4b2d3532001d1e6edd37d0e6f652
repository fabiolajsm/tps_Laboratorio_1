#include <stdio.h>
#include <stdlib.h>
#include "validaciones.h"
#include "operaciones.h"

int main(void) {
	int mostrarMenu = 1;
	int opcion;

	while (mostrarMenu) {
		opcion =
				getNumero(&opcion,
						"Seleccione una opción:\n1. Ingreso de los costos de Mantenimiento.\n2. Carga de jugadores.\n3. Realizar todos los cálculos.\n4. Informar resultados.\n5. Salir.",
						"Error. Opción inválida.\n", 1, 5, 3);
	}
	return EXIT_SUCCESS;
}
